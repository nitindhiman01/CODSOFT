<%- include("partials/header") %>

<div class="container-fluid">
  <nav class="navbar navbar-expand-lg">
      <div class="navbar-header">
        <p class="navbar-brand">DAILY BLOGGER</p>
      </div>
        <ul class="nav navbar-nav navbar-right">
          <!-- 6 -->
          <li id="home"><a href="/">HOME</a></li>
          <li id="profile"><a href="/profile">PROFILE</a></li>
          <li id="contact"><a href="/contact">CONTACT US</a></li>
        </ul>
  </nav>
</div>

<div class="container-fluid">
  <strong><h1><%= posts.Title %></h1></strong>
  <p style="font-size: 1.2rem;">
    <%= posts.Content %>
  </p>
</div>

<!-- comments -->
<div class="container">
  <form action="/posts/<%= posts._id %>/comments" method="POST">
    <div class="form-floating">
      <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea" name="comment"></textarea>
    </div>
    <button type="submit" class="btn login-btn">Comment</button>
  </form>
</div>

<!-- Display comments -->
<div class="container pt-5">
  <div class="container">
    <div class="row">
      <% posts.comments.forEach((comment) => { %>
        <div class="col-12">
          <p>
            <strong><%= comment.author %></strong>
            <br>
            <%= comment.comment %>
          </p>
        </div>
      <%  }) %>
    </div>
  </div>
</div>


<%- include("partials/footer") %>
